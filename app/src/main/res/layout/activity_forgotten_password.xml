<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fcfm.psm.psm_app.ForgottenPasswordActivity"
    android:background="#424242">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txt_fgEmail"
        android:hint="Correo Electronico"
        android:textColorHint="#656565"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_instruction"
        app:layout_constraintVertical_bias="0.100000024"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Introduzca su correo electronico para recuperar su contraseÃ±a."
        android:id="@+id/tv_instruction"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#f0c23b"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.100000024"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Enviar"
        android:id="@+id/tv_eventDescription"
        android:textSize="20dp"
        android:background="#303030"
        android:textColor="#ffffff"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_fgEmail"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />


    <ImageView
        android:id="@+id/img_logo"
        android:src="@mipmap/ic_launcher"
        android:layout_height="292dp"
        android:layout_width="395dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.13"
        app:layout_constraintHorizontal_bias="0.56" />


</android.support.constraint.ConstraintLayout>
