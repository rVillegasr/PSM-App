<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fcfm.psm.psm_app.ShareMomentActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/constraintLayout2">

        <ImageButton
            android:layout_width="100dp"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/btn_memory"
            android:background="@color/colorAccent"
            android:layout_margin="10dp"
            app:layout_constraintRight_toRightOf="@+id/img_selectedImg"
            app:layout_constraintLeft_toLeftOf="@+id/img_selectedImg"
            app:layout_constraintTop_toTopOf="@+id/btn_camera"
            app:layout_constraintBottom_toBottomOf="@+id/btn_camera"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_height="100dp"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_selectedImg"
            android:layout_width="220dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_share"
            android:layout_marginBottom="8dp"
            android:layout_height="220dp"
            app:layout_constraintVertical_bias="0.050000012" />

        <ImageButton
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/btn_camera"
            android:background="@color/colorAccent"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="@+id/img_selectedImg"
            app:layout_constraintRight_toRightOf="@+id/img_selectedImg"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/img_selectedImg"
            app:layout_constraintBottom_toTopOf="@+id/btn_share"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:layout_width="100dp" />

        <Button
            android:layout_height="54dp"
            android:id="@+id/btn_share"
            android:background="#303030"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="1.0"
            android:text="@string/btn_share" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
